@model Casino.Models.LoginModel
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Settings</h2>
<div class="form-container">
    @using (Html.BeginForm("Points", "Casino", FormMethod.Get))
    {
        <input type="submit" value="Add Points" class="btn btn-success" />
    }
    @using (Html.BeginForm("Login", "Casino", FormMethod.Get))
    {
        <input type="submit" value="Logout" class="btn btn-danger" />
    }
    @using (Html.BeginForm("Poker", "Casino", FormMethod.Post))
    {
        <input type="submit" value="Start" class="btn btn-primary" />
    }
</div>